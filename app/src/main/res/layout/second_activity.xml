<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xavier.admob_example.second_activity">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId= "ca-app-pub-8988021238728531/2784221004"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barra de estado"
        android:id="@+id/btn_barra"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Big Picture"
        android:id="@+id/btn_bigPic"
        android:layout_below="@+id/btn_barra"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_inbox"
        android:layout_below="@+id/btn_bigPic"
        android:layout_centerHorizontal="true"
        android:text="Inbox Style" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Con Botones"
        android:id="@+id/btn_con_botones"
        android:layout_below="@+id/btn_inbox"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Botones y Estilo"
        android:id="@+id/btn_botonEstilo"
        android:layout_below="@+id/btn_con_botones"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
